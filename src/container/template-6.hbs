<header class="header">
	<a href="#test">
		{{>logo}}
	</a>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<div class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}" />
			{{/each}}
		</div>
		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>
		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</div>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
	<h2 class="updates_title">{{title}}</h2>

	{{#each list}}
	<div class="list">
		<div class="img">32x32</div>
		<div class="">
			<strong class="list_name">{{nickname}}</strong>
			<p class="list_description">{{description}}</p>
		</div>
	</div>
	{{/each}}

	{{#with show_all}}
	<a class="show_all" href="{{url}}">{{text}}</a>
	{{/with}}
	{{/with}}
</div>







<div class="experience">
	<div class="experience_title">
		<div>
			<h2>{{expirience.title}}</h2>
		</div>
		<div>
			<span class="span_badge">{{expirience.badge}}</span>
		</div>
	</div>
	<div class="person_card">
		{{#each expirience.list}}
		<div>
			<h3>{{name}}</h3>
			<p>{{details}}</p>
		</div>
		{{/each}}
	</div>


</div>












<footer class="footer" id="test">
	<div>
		{{>logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>