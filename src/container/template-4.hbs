<header class="header">
	<div class="">
		{{>logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<div class="main">
	<img src="{{image}}" url="Main image" class=" main_image">
	<div class="main_content">
		<h1 class="main_heading">{{heading}}</h1>
		<p class="main_description">{{description}}</p>
		<a class="button main_button" href="{{href}}">{{button}}</a>
	</div>
</div>
{{/with}}

<div class="featured">
	{{#each featured}}
	{{> cardVlog data=this}}
	{{/each}}
</div>

<div class="actions">
	{{#each actions}}
	<div class="actions_content">
		<h3 class="actions_heading">{{heading}}</h3>
		<div class="actions_act">
			<p class="actions_text">{{text}}</p>
			<a class=" actions_button" href="{{href}}">{{button}}</a>
		</div>
	</div>
	{{/each}}
</div>

<footer class="footer">
	<div>
		{{>logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>